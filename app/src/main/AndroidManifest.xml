<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="omerrom.happybirthday">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".application.HappyBirthday"
        android:icon="@mipmap/nanit_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/nanit_logo"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="true"
        android:allowBackup="true"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name=".application.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="omerrom.happybirthday.loginscreen.LoginScreenActivity"
            android:screenOrientation="portrait" />

        <activity android:name="omerrom.happybirthday.birthdatescreen.BirthDateScreenActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>